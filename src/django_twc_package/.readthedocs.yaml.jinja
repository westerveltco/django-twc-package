version: 2

build:
  apt_packages:
    - just
  os: ubuntu-22.04
  tools:
    python: "{{ python_max_version }}"

sphinx:
   configuration: docs/conf.py

formats:
   - pdf
   - epub

python:
  install:
    - method: pip
      path: .
      extra_requirements:
        - docs
  jobs:
    pre_build:
      - just _cog
